}


    function onLoad()
    {
        starTimer = 0;
    }

    function onEnterFrame()
    {
		barra.timeText.text = myTimer;
		myTimer.start();
        starTimer += 1;

	   
	    if(starTimer > timt && _currentframe ==2)
        {
            starTimer = 0;
			var ran;
			var ran2 = random(3)+1;

			if (ran2==1)
			{
			  ran =random(5)+1;
			  cad = "Enf"+ran;
			  star = _root.attachMovie("Enf"+ran, cad + indice,indice); indice++;
			  star._x=tipo1x;
			}else if (ran2==2)
			{
				ran =random(5)+1;
			 	cad = "Enf"+ran;
			 	star2 = _root.attachMovie("Enf"+ran, cad + indice,indice); indice++;
				star2._x=tipo2x;
			} 
			else if (ran2==3)
			{
				ran =random(5)+1;
			 	cad = "Enf"+ran;
			 	star3 = _root.attachMovie("Enf"+ran, cad + indice, indice); indice++;
				star3._x=tipo3x;
			}	
        }
    }
}
