    var drop;
    var xx;
    var yy;
    var tipo1x=Number;
    var tipo2x=Number;
    var tipo3x=Number;
    var starTimer: Number;
    var cad;

    function juego():Void
    {    
        home = this;
        tipo1x=130,25;
        tipo2x=395,70;
        tipo3x=660,20;
        starTimer=0;
            
        muerto1._visible=false;
        muerto2._visible=false;
        muerto3._visible=false;
